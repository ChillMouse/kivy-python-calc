<CalcScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: input
            font_size: 32
            halign: 'center'
            valign: 'center'
        GridLayout:
            cols: 3
            rows: 3
            Button:
                text: '1'
                on_press:
                    root.addNumberToInput(self)
            Button:
                text: '2'
                on_press:
                    root.addNumberToInput(self)
            Button:
                text: '3'
                on_press:
                    root.addNumberToInput(self)
            Button:
                text: '4'
                on_press:
                    root.addNumberToInput(self)
            Button:
                text: '5'
                on_press:
                    root.addNumberToInput(self)
            Button:
                text: '6'
                on_press:
                    root.addNumberToInput(self)
            Button:
                text: '7'
                on_press:
                    root.addNumberToInput(self)
            Button:
                text: '8'
                on_press:
                    root.addNumberToInput(self)
            Button:
                text: '9'
                on_press:
                    root.addNumberToInput(self)
        GridLayout:
            cols: 3
            rows: 2
            Button:
                text: '.'
                on_press:
                    root.addDotToInput()
            Button:
                text: '0'
                on_press:
                    root.addNumberToInput(self)
            Button:
                text: '='
                on_press:
                    root.getResult()
            Button:
                text: '-'
                on_press:
                    root.addCharToInput(self)
            Button:
                text: '+'
                on_press:
                    root.addCharToInput(self)
            Button:
                text: 'C'
                on_press:
                    root.deleteLastFromInput()